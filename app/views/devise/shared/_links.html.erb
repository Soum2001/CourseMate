<hr class="my-4">

<div class="text-center">
  <%= link_to "Log in", new_session_path(resource_name), class: "d-block mb-2" %>

  <% if devise_mapping.registerable? %>
    <%= link_to "Sign up", new_registration_path(resource_name), class: "d-block mb-2" %>
  <% end %>

  <% if devise_mapping.confirmable? %>
    <%= link_to "Didn't receive confirmation instructions?",
                new_confirmation_path(resource_name),
                class: "d-block mb-2" %>
  <% end %>

  <% if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) %>
    <%= link_to "Didn't receive unlock instructions?",
                new_unlock_path(resource_name),
                class: "d-block mb-2" %>
  <% end %>
</div>

<% if devise_mapping.omniauthable? %>
  <hr class="my-4">
  <div class="text-center">
    <% resource_class.omniauth_providers.each do |provider| %>
      <%= button_to "Sign in with #{OmniAuth::Utils.camelize(provider)}",
                    omniauth_authorize_path(resource_name, provider),
                    class: "btn btn-outline-secondary w-100 mb-2",
                    data: { turbo: false } %>
    <% end %>
  </div>
<% end %>