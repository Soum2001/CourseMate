
<div class="container mt-5">
  <div class="card shadow-lg border-0">
    <div class="card-body p-5">
      <h1 class="card-title mb-4 text-center text-primary fw-bold"><%= @course.title %></h1>
      <% if @course.video_url.present? %>
        <div class="ratio ratio-16x9 mb-4">
          <iframe src="<%= @course.video_url%>" title="Course video" allowfullscreen></iframe>
        </div>
      <% end %>

      <p class="card-text fs-5 text-secondary"><%= @course.description %></p>

      <hr>
      <div class="d-flex justify-content-between">
        <%= link_to "Back to Courses", courses_path, class: "btn btn-outline-secondary" %>
        <%= link_to "Edit Course", edit_course_path(@course), class: "btn btn-warning" %>
      </div>
    </div>
  </div>
</div>
