<div class="container mt-4">
  <h2>Edit Profile</h2>

  <%= form_with(model: current_user, url: instructors_profile_path, method: :patch, local: true, multipart: true) do |f| %>
    <div class="row">
      <!-- Left: Avatar Preview -->
      <div class="col-md-4">
        <div class="card text-center mb-3">

            <%= image_tag "avtar.png", class: "card-img-top", alt: "Default Avatar" %>
         
          <div class="card-body">
            <%= f.label :avatar, "Upload New Avatar" %>
            <%= f.file_field :avatar, class: "form-control" %>
          </div>
        </div>
      </div>

      <!-- Right: Profile Fields -->
      <div class="col-md-8">
        <div class="mb-3">
          <%= f.label :name %>
          <%= f.text_field :name, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= f.label :email %>
          <%= f.email_field :email, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= f.label :bio, "Bio" %>
          <%= f.text_area :bio, class: "form-control", rows: 5 %>
        </div>

        <div class="mt-3">
          <%= f.submit "Update Profile", class: "btn btn-success" %>
          <%= link_to "Cancel", instructors_profile_path, class: "btn btn-secondary" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
