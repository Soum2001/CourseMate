<!DOCTYPE html>
<html>
<head>
<title><%= content_for(:title) || "Course Mate" %></title>
<meta name="viewport" content="width=device-width,initial-scale=1">

<%= csrf_meta_tags %>
<%= csp_meta_tag %>

<%= stylesheet_link_tag :app, "data-turbo-track": "reload" %>

<!-- Bootstrap CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

<%= javascript_importmap_tags %>
</head>
  <body>
  <%# Only show navbar if user is signed in or not on login/signup pages %>
    <% unless devise_controller? %>
      <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm sticky-top">
        <div class="container-fluid">
          <!-- Logo -->
          <a class="navbar-brand" href="#"><%= image_tag "logo.jpg", height: "70" %>Edu Source</a>
            
           <!-- Toggle for mobile -->
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
            <span class="navbar-toggler-icon"></span>
          </button>

          <div class="collapse navbar-collapse justify-content-end" id="navbarContent">
          <div class="d-flex align-items-center gap-4">
          <!--
          <div class="dropdown">
            <button class="btn btn-outline-dark dropdown-toggle" type="button" id="roleDropdown" data-bs-toggle="dropdown" aria-expanded="false">
              Select Role
            </button>
            <ul class="dropdown-menu" aria-labelledby="roleDropdown">
              <li><%= link_to "Instructor", instructors_courses_path, class: "dropdown-item" %></li>
              <li><%= link_to "Student", instructors_courses_path, class: "dropdown-item" %></li>
            </ul>
          </div> 
          -->
        
          <div class="dropdown">
            <div class="avatar-circle" data-bs-toggle="dropdown" aria-expanded="false">
              <%= current_user.name.split.map { |n| n[0].upcase }.join %>
            </div>
        
            <ul class="dropdown-menu dropdown-menu-end">
              <% if !current_page?(instructors_courses_path) %>
                <%if current_user.roles.exists?(name: 'student')%>
                  <li><%= link_to "Profile", instructors_profile_path, class: "dropdown-item" %></li>
                  <li><%= link_to "My Learnings", instructors_courses_path, class: "dropdown-item" %></li>
                  <li><%= link_to "Cart", students_carts_path, class: "dropdown-item" %></li>
                  <%if current_user.roles.exists?(name: 'instructor')%>
                    <li><%= link_to "Switch to Instructor Account", instructors_courses_path, class: "dropdown-item" %></li>
                  <%else%>
                   <li><%= link_to "Create Instructor Account", instructors_courses_path, class: "dropdown-item" %></li>
                  <% end %>
                  <li><%= link_to "Account Activation", instructors_onboarding_onboard_account_path, class: "dropdown-item" %></li>
                <% end %>
              <% end %>
              <% if current_page?(instructors_courses_path) %>
                <li><%= link_to "Profile", instructors_profile_path, class: "dropdown-item" %></li>
                <li><%= link_to "Course List", instructors_courses_path, class: "dropdown-item" %></li>
                <li><%= link_to "Switch to Student Account", students_courses_path, class: "dropdown-item" %></li>
              <% end %>
              <li><hr class="dropdown-divider"></li>
              <li>
              <%= link_to "Sign Out",
                          destroy_user_session_path,
                          method: :delete,
                          data: { turbo: false },
                          class: "dropdown-item text-danger" %>
            </li>
            
            </ul>
          </div>
        </div>
        
          </div>

          </div>
        </div>
      </nav>
    <% end %>
    <%= yield %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"></script>
  </body>
</html>
